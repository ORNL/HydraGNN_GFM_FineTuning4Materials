{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug QM9 Ensemble Fine-tune",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/examples/qm9/ensemble_fine_tune.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/examples/qm9",
            "args": [
                "--finetuning_config", "finetuning_config.json",
                "--pretrained_model_ensemble_path", "../../Ensemble_of_models",
                "--log", "debug_run",
                "--batch_size", "32"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/HydraGNN:${env:PYTHONPATH}"
            },
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": false,
            "stopOnEntry": false,
            "redirectOutput": true
        },
        {
            "name": "Debug QM9 Preprocessing",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/examples/qm9/qm9_preonly.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/examples/qm9",
            "args": [],
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/HydraGNN:${env:PYTHONPATH}"
            },
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": false,
            "stopOnEntry": false,
            "redirectOutput": true
        },
        {
            "name": "Debug Current Python File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${fileDirname}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/HydraGNN:${env:PYTHONPATH}"
            },
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": false,
            "stopOnEntry": false,
            "redirectOutput": true
        },
        {
            "name": "Debug with Custom Args",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/examples/qm9/ensemble_fine_tune.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/examples/qm9",
            "args": [],
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/HydraGNN:${env:PYTHONPATH}"
            },
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": false,
            "stopOnEntry": false,
            "redirectOutput": true
        },
        {
            "name": "Debug with MPI (Single Process)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/examples/qm9/ensemble_fine_tune.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/examples/qm9",
            "args": [
                "--finetuning_config", "finetuning_config.json",
                "--pretrained_model_ensemble_path", "../../Ensemble_of_models"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/HydraGNN:${env:PYTHONPATH}",
                "OMPI_MCA_plm_rsh_agent": "false",
                "OMPI_MCA_orte_default_hostfile": "",
                "OMPI_MCA_orte_tmpdir_base": "/tmp"
            },
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": false,
            "stopOnEntry": false,
            "redirectOutput": true
        }
    ]
}